{
  "name": "dream",
  "displayName": "DreamBerd",
  "description": "Language support for the DreamBerd programming language",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "dreamberd",
      "aliases": ["DreamBerd", "dreamberd"],
      "extensions": [".dream",".dreamberd",".berd"],
      "configuration": "./language-configuration.json",
      "icon": {
       
        "light": "./icons/icon-dark.png", 
        "dark": "./icons/icon-dark.png"
      }
    }],
    "grammars": [{
      "language": "dreamberd",
      "scopeName": "source.dreamberd",
      "path": "./syntaxes/dreamberd.tmLanguage.json"
    }]
  }
}
