program = { SOI ~ (comments | statement )+ ~ EOI}
comments = _{ "//" ~ (!NEWLINE ~ ANY)* }
statement = { WHITESPACE* ~ (unary_op | binary_op | number)+ ~ WHITESPACE*}

number = { ASCII_DIGIT+ }
unary_op = { "-"+ ~ number }
binary_op = { number ~ WHITESPACE* ~ ( "+" | "-" | "*" | "/" ) ~ WHITESPACE* ~ number }


WHITESPACE = _{ " " | NEWLINE }